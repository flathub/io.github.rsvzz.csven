{
  "id": "io.github.rsvzz.csven",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "csven",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
     "build-args": [
      "--share=network"
    ]
  },
  "finish-args": [
    "--share=ipc",
    "--device=dri",
    "--socket=fallback-x11",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include"
  ],
  "modules": [
    {
      "name": "csven",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/rsvzz/csven-rs/archive/refs/tags/v0.1.20.tar.gz",
          "sha256": "ba4e0d807dd8d7ca59b71299c5ac1156048f14f33f4c2c4ff4520e9e57d2d4a3"
        }
      ]
    }
  ]
}